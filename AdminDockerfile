FROM mcr.microsoft.com/dotnet/core/sdk:3.1 AS build
WORKDIR /build

COPY ["/IdentityService.Admin/IdentityService.Admin.csproj", "IdentityService.Admin/"]
COPY ["IdentityService.Admin.EntityFramework.Shared/IdentityService.Admin.EntityFramework.Shared.csproj", "IdentityService.Admin.EntityFramework.Shared/"]
COPY ["IdentityService.Admin.EntityFramework.MySql/IdentityService.Admin.EntityFramework.MySql.csproj", "IdentityService.Admin.EntityFramework.MySql/"]
RUN dotnet restore "IdentityService.Admin/IdentityService.Admin.csproj"

COPY . .
WORKDIR "/build/IdentityService.Admin"
RUN dotnet build "IdentityService.Admin.csproj" -c Release -o /app
RUN dotnet publish -c release -r debian-x64 -o /app

FROM mcr.microsoft.com/dotnet/core/aspnet:3.1 AS final
WORKDIR /app
COPY --from=build /app .
ENV ASPNETCORE_URLS http://+:80
ENTRYPOINT ["dotnet", "IdentityService.Admin.dll"]

