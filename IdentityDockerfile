FROM mcr.microsoft.com/dotnet/core/sdk:3.1 AS build
WORKDIR /build

COPY ["IdentityService.API/IdentityService.API.csproj", "IdentityService.API/"]
COPY ["IdentityService.Admin.EntityFramework.Shared/IdentityService.Admin.EntityFramework.Shared.csproj", "IdentityService.Admin.EntityFramework.Shared/"]
COPY ["IdentityService.Admin.EntityFramework.MySql/IdentityService.Admin.EntityFramework.MySql.csproj", "IdentityService.Admin.EntityFramework.MySql/"]
RUN dotnet restore "IdentityService.API/IdentityService.API.csproj"

COPY . .
WORKDIR "/build/IdentityService.API"
RUN dotnet build "IdentityService.API.csproj" -c Release -o /app
RUN dotnet publish -c release -r debian-x64 -o /app

FROM mcr.microsoft.com/dotnet/core/aspnet:3.1 AS final
WORKDIR /app
COPY --from=build /app .
ENV ASPNETCORE_URLS http://+:80
ENTRYPOINT ["dotnet", "IdentityService.API.dll"]

